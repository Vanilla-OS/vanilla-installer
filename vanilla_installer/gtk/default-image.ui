<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="VanillaDefaultImage" parent="AdwBin">
    <property name="halign">0</property>
    <property name="valign">0</property>
    <property name="hexpand">true</property>
    <child>
      <object class="GtkOverlay">
        <property name="valign">3</property>
        <child type="overlay">
          <object class="GtkButton" id="btn_next">
            <property name="margin-end">12</property>
            <property name="margin-start">12</property>
            <property name="icon-name">go-next-symbolic</property>
            <property name="halign">2</property>
            <property name="valign">3</property>
            <property name="tooltip-text" translatable="yes">Next</property>
            <style>
              <class name="circular"/>
              <class name="suggested-action"/>
            </style>
          </object>
        </child>
        <child>
          <object class="AdwStatusPage" id="status_page">
            <property name="icon-name">image-missing-symbolic</property>
            <property name="title" translatable="yes">Custom Image</property>
            <property name="description" translatable="yes">You can use a custom image with Vanilla OS if you want. Note that the Vanilla OS team is not responsible for any issues that arise from using a custom image. Keep it at default if you don't know what you're doing.</property>
            <child>
              <object class="AdwPreferencesPage">
                <child>
                  <object class="AdwPreferencesGroup">
                    <child>
                      <object class="AdwActionRow">
                        <property name="title" translatable="yes">Use Custom Image</property>
                        <property name="subtitle" translatable="yes">Keep it off if you don't know what you're doing</property>
                        <child type="suffix">
                          <object class="GtkSwitch" id="use_image_switch">
                            <property name="valign">3</property>
                            <property name="active">false</property>
                          </object>
                        </child>
                        <property name="activatable-widget">use_image_switch</property>
                      </object>
                    </child>
                    <child>
                      <object class="AdwEntryRow" id="image_url_entry">
                        <property name="title" translatable="yes">URL</property>
                        <property name="sensitive" bind-source="use_image_switch" bind-property="active" bind-flags="sync-create"/>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
