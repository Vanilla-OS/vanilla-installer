<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="DiskDefaultPage" parent="AdwBin">
    <property name="hexpand">true</property>
    <child>
      <object class="AdwStatusPage" id="disk_page">
        <property name="icon-name">vanilla-installer-harddisk-symbolic</property>
        <property name="title" translatable="yes">Install Location</property>
        <child>
          <object class="AdwClamp" id="disk_clamp">
            <property name="maximum-size">300</property>
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <child>
                  <object class="GtkFlowBox" id="all_disks_box">
                    <property name="max-children-per-line">2</property>
                    <property name="min-children-per-line">1</property>
                    <property name="column-spacing">12</property>
                    <property name="row-spacing">12</property>
                    <property name="margin-top">12</property>
                    <property name="margin-bottom">12</property>
                    <property name="margin-start">12</property>
                    <property name="margin-end">12</property>
                    <property name="activate-on-single-click">False</property>
                    <property name="selection-mode">none</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>                
  </template>
</interface>
